<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >



        <RelativeLayout  android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            >

            <ImageView

                android:padding="3sp"
                android:id="@+id/newsCommentIv"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_comment_black_18dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:id="@+id/commentTv"
                android:layout_below="@id/newsCommentIv"
                android:text="20"
                />



            <TextView


                android:id="@+id/titleTv"
                android:layout_toRightOf="@id/newsCommentIv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Кыргыз балбандары Азия чемпиондугунан ийгиликтүү кайтышты"
                />

            <!-- <ImageView

                 android:layout_alignRight="@id/newsIv"
                 android:padding="3sp"
                 android:id="@+id/newsShareIv"
                 android:layout_width="wrap_content"
                 android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
                 android:layout_height="wrap_content"



                 />-->


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>